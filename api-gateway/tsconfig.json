{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./dist",
    
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@shared-libs/dto": ["./node_modules/@shared-libs/dto/dist/dto"],
      "@shared-libs/dto/*": ["./node_modules/@shared-libs/dto/dist/dto/*"]
    }
  
  },
  "include": ["src/**/*.ts"]
  // "include": [
  //   "./src",
  //   "../shared-libs/src"  // Ajout du dossier partag√©
  // ]
}
